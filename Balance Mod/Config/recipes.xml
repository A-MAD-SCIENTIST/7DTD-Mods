<BetterBalanceMod>
<!-- Added receipes -->
	<append xpath="/recipes">
	<!-- Spikes -->
		<recipe name="woodLogSpike1" count="1">
			<ingredient name="resourceWood" count="12"/>
		</recipe>
		<recipe name="scrapIronLogSpike4" count="1">
			<ingredient name="resourceScrapIron" count="20"/>
		</recipe>
	<!-- Steel polish -->		
		<recipe name="resourceSteelPolish" count="10" craft_area="chemistryStation" craft_time = "15">
			<ingredient name="resourceForgedSteel" count="5"/>
			<ingredient name="resourceGlue" count="1"/>
		</recipe>
	<!-- Additional mining helmets -->
		<recipe name="armorMiningHelmetMilitary" count="1" craft_area="workbench" tags="learnable">
			<ingredient name="armorMilitaryHelmet" count="1"/>
			<ingredient name="meleeToolFlashlight02" count="1"/>
			<ingredient name="resourceElectricParts" count="8"/>
			<ingredient name="resourceDuctTape" count="5"/>
			<ingredient name="resourceScrapPolymers" count="4"/>
		</recipe>
		<recipe name="armorMiningHelmetSteel" count="1" craft_area="workbench" tags="learnable">
			<ingredient name="armorSteelHelmet" count="1"/>
			<ingredient name="meleeToolFlashlight02" count="1"/>
			<ingredient name="resourceElectricParts" count="8"/>
			<ingredient name="resourceDuctTape" count="5"/>
			<ingredient name="resourceScrapPolymers" count="4"/>
		</recipe>
		<recipe name="armorMiningHelmetSwat" count="1" craft_area="workbench" tags="learnable">
			<ingredient name="armorSwatHelmet" count="1"/>
			<ingredient name="meleeToolFlashlight02" count="1"/>
			<ingredient name="resourceElectricParts" count="8"/>
			<ingredient name="resourceDuctTape" count="5"/>
			<ingredient name="resourceScrapPolymers" count="4"/>
		</recipe>
	</append>
<!-- Reduce materials required -->
	<!-- Anvil -->
		<set xpath="/recipes/recipe[@name='toolAnvil']/ingredient[@name='unit_iron']/@count">400</set>
		<set xpath="/recipes/recipe[@name='toolAnvil']/ingredient[@name='unit_clay']/@count">40</set>
	<!-- Traps -->
		<set xpath="/recipes/recipe[@name='trapSpikesWoodDmg0']/ingredient[@name='resourceWood']/@count">16</set>	
	<!-- Raw meat -->
		<set xpath="/recipes/recipe/ingredient[@name='foodRawMeat' and @count='5']/@count">2</set>
		<set xpath="/recipes/recipe/ingredient[@name='foodRawMeat' and @count='10']/@count">6</set>
	<!-- Scrap Iron -->
		<set xpath="/recipes/recipe/ingredient[@name='resourceScrapIron' and @count='10']/@count">8</set>
		<set xpath="/recipes/recipe/ingredient[@name='resourceScrapIron' and @count='15']/@count">12</set>
		<set xpath="/recipes/recipe/ingredient[@name='resourceScrapIron' and @count='25']/@count">20</set>
		<set xpath="/recipes/recipe/ingredient[@name='resourceScrapIron' and @count='40']/@count">30</set>
		<set xpath="/recipes/recipe/ingredient[@name='resourceScrapIron' and @count='50']/@count">40</set>
		<set xpath="/recipes/recipe/ingredient[@name='resourceScrapIron' and @count='100']/@count">60</set>		
		<set xpath="/recipes/recipe/ingredient[@name='resourceScrapIron' and @count='120']/@count">80</set>
		<set xpath="/recipes/recipe/ingredient[@name='resourceScrapIron' and @count='240']/@count">150</set>
	<!-- Iron bars -->
		<set xpath="/recipes/recipe[@name='ironBars']/ingredient[@name='unit_iron']/@count">20</set>	
		<set xpath="/recipes/recipe[@name='ironBars']/ingredient[@name='unit_clay']/@count">10</set>	
		<set xpath="/recipes/recipe[@name='ironBarsCentered']/ingredient[@name='unit_iron']/@count">20</set>	
		<set xpath="/recipes/recipe[@name='ironBarsCentered']/ingredient[@name='unit_clay']/@count">10</set>	
	<!-- Forged Steel -->
		<set xpath="/recipes/recipe/ingredient[@name='resourceForgedSteel' and @count='5']/@count">4</set>
		<set xpath="/recipes/recipe/ingredient[@name='resourceForgedSteel' and @count='10']/@count">8</set>
		<set xpath="/recipes/recipe/ingredient[@name='resourceForgedSteel' and @count='12']/@count">10</set>
		<set xpath="/recipes/recipe/ingredient[@name='resourceForgedSteel' and @count='20']/@count">16</set>
		<set xpath="/recipes/recipe/ingredient[@name='resourceForgedSteel' and @count='24']/@count">20</set>
		<set xpath="/recipes/recipe/ingredient[@name='resourceForgedSteel' and @count='30']/@count">24</set>
		<set xpath="/recipes/recipe/ingredient[@name='resourceForgedSteel' and @count='32']/@count">26</set>
